<!DOCTYPE html>
<html>
    <head>
        <title>View Increaser</title>
    </head>
    <body>
        <h1>Enter a URL to increase views:</h1>
        <form action="/add-url" method="POST">
            <input type="text" name="url" placeholder="Enter URL" required />
            <button type="submit">Add URL</button>
        </form>

        <h2>Current URLs:</h2>
        <ul>
            <% urls.forEach((item) => { %>
            <li><%= item.url %> (Views: <%= item.views %>)</li>
            <% }) %>
        </ul>
    </body>
</html>
