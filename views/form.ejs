<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Primary Meta Tags -->
        <title>
            View Increaser - Increase Your Website Views Automatically
        </title>
        <meta
            name="title"
            content="View Increaser - Increase Your Website Views Automatically"
        />
        <meta
            name="description"
            content="Automatically increase your website views every 10 seconds. Simply enter a URL, and the tool will boost your page views!"
        />
        <meta
            name="keywords"
            content="view increaser, website views, SEO tool, increase website traffic, URL booster"
        />
        <meta name="author" content="Pradip Chaudhary" />
        <meta name="robots" content="index, follow" />
        <meta name="revisit-after" content="7 days" />

        <!-- Favicon -->
        <link rel="icon" href="/favicon.ico" type="image/x-icon" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta
            property="og:url"
            content="https://view-increaser.onrender.com/"
        />
        <meta
            property="og:title"
            content="View Increaser - Increase Your Website Views Automatically"
        />
        <meta
            property="og:description"
            content="Automatically increase your website views every 10 seconds. Enter a URL and the tool will boost your page views!"
        />
        <meta
            property="og:image"
            content="https://view-increaser.onrender.com/images/preview.png"
        />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta
            property="twitter:url"
            content="https://view-increaser.onrender.com"
        />
        <meta
            property="twitter:title"
            content="View Increaser - Increase Your Website Views Automatically"
        />
        <meta
            property="twitter:description"
            content="Automatically increase your website views every 10 seconds. Enter a URL and the tool will boost your page views!"
        />
        <meta
            property="twitter:image"
            content="https://view-increaser.onrender.com/images/preview.png"
        />

        <!-- Fonts and Stylesheets -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
            rel="stylesheet"
        />

        <style>
            /* Global styles and background */
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body {
                width: 100%;
                height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
                text-align: center;
                font-family: "Roboto", sans-serif;
                background-image: linear-gradient(
                    to top,
                    #d5d4d0 0%,
                    #d5d4d0 1%,
                    #eeeeec 31%,
                    #efeeec 75%,
                    #e9e9e7 100%
                );
                color: #000000;
            }

            .container {
                backdrop-filter: blur(10px);
                border-radius: 15px;
                padding: 30px;
                max-width: 500px;
                width: 100%;
                margin-left: auto;
                margin-right: auto;
            }
            .header {
                margin-bottom: 3rem;
            }
            .header h1 {
                font-size: 3rem;
                margin-bottom: 10px;
                line-height: 60px;
                font-weight: 500;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 10px;
            }
            .header p {
                color: #555;
                font-size: 1rem;
                margin-bottom: 20px;
            }

            form {
                margin: 3rem 0;
            }
            input[type="text"] {
                width: 80%;
                padding: 12px;
                border-radius: 5px;
                border: none;
                margin-bottom: 20px;
                font-size: 1rem;
                border: 1px solid #d5d5d5;
                transition: border 0.3s ease;
            }

            input[type="text"]:hover,
            :focus {
                border: 1px solid #d5d5d5;
                outline: none;
            }

            button {
                padding: 12px 25px;
                border: none;
                border-radius: 25px;
                background-color: #222;
                color: white;
                font-size: 1rem;
                cursor: pointer;
                transition: background-color 0.3s ease;
                margin-top: 1rem;
                font-weight: 200;
            }

            button:hover {
                background-color: #222;
            }

            ul {
                list-style-type: none;
                padding: 0;
            }

            ul li {
                margin-bottom: 10px;
                font-size: 1rem;
            }

            /* Countdown and hit count styles */
            .countdown {
                font-size: 2rem;
                font-weight: bold;
                color: #ff7675;
            }

            .hit-info {
                font-size: 2rem;
                font-weight: bold;
                color: #32e0c4;
            }

            /* Styling for headings */

            .show h2 {
                margin: 20px;
                font-size: 1.5rem;
                color: #222;
            }
            .show p {
                display: flex;
                justify-content: space-between;
                align-items: center;
                flex-direction: column;
                gap: 10px;
                margin: 10px;
            }
            .show strong {
                color: #555;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="header">
                <h1>
                    <img
                        src="/images/logo.png"
                        alt="Logo"
                        style="width: 70px"
                    />
                    View Increaser
                </h1>
                <p>Enter a URL to increase views every 10 seconds:</p>
            </div>

            <form action="/add-url" method="POST" id="url-form">
                <input
                    type="text"
                    id="url-input"
                    name="url"
                    placeholder="Enter URL"
                    required
                />
                <br />
                <button type="submit" id="toggle-button">
                    Start Increasing Views
                </button>
            </form>

            <ul id="url-list">
                <% urls.forEach((item) => { %>
                <li>
                    <strong>URL:</strong> <%= item.url %>
                    <br />
                    <strong>Views:</strong> <%= item.views %> hits
                </li>
                <% }) %>
            </ul>

            <div class="show">
                <h2>Next URL Hit:</h2>
                <p>
                    <span
                        ><span id="countdown" class="countdown">10</span>
                        sec</span
                    >
                    <strong>Time until next hit:</strong>
                </p>
                <p>
                    <span id="hit-count" class="hit-info">0</span>
                    <strong>Hit Count:</strong>
                </p>
            </div>
        </div>

        <script>
            let currentUrl = null;
            let hitCount = 0;
            let countdownTime = 10;
            let countdownInterval = null;
            let isIncreasing = false;

            function startCountdown(url) {
                clearInterval(countdownInterval);
                countdownTime = 10;

                countdownInterval = setInterval(() => {
                    countdownTime--;
                    document.getElementById("countdown").textContent =
                        countdownTime;

                    if (countdownTime === 0) {
                        hitUrlAndOpenTab(url);
                        countdownTime = 10;
                    }
                }, 1000);
            }

            function hitUrlAndOpenTab(url) {
                const newTab = window.open(url, "_blank");

                if (newTab) {
                    hitCount += 1;
                    document.getElementById("hit-count").textContent = hitCount;

                    setTimeout(() => {
                        newTab.close();
                    }, 10000);
                } else {
                    alert(
                        "Pop-up was blocked! Please allow pop-ups for this site."
                    );
                }

                setTimeout(() => {
                    if (currentUrl === url) {
                        startCountdown(url);
                    }
                }, 5000);
            }

            const form = document.getElementById("url-form");
            const toggleButton = document.getElementById("toggle-button");

            form.addEventListener("submit", function (e) {
                e.preventDefault();
                currentUrl = document.getElementById("url-input").value;

                if (isIncreasing) {
                    stopIncreasingViews();
                } else {
                    startIncreasingViews();
                }
            });

            function startIncreasingViews() {
                toggleButton.textContent = "Stop Increasing Views";
                isIncreasing = true;

                startCountdown(currentUrl);
            }

            function stopIncreasingViews() {
                toggleButton.textContent = "Start Increasing Views";
                isIncreasing = false;

                clearInterval(countdownInterval);
            }
        </script>
    </body>
</html>
